<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- ============================================= -->
    <!-- PROPERTIES & VARIABLES                        -->
    <!-- ============================================= -->
    <property name="LOG_DIR" value="logs"/>
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n"/>

    <!-- ============================================= -->
    <!-- CONSOLE APPENDER (Colored for Development)    -->
    <!-- ============================================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ============================================= -->
    <!-- ROLLING FILE APPENDERS                        -->
    <!-- ============================================= -->

    <!-- APP-INFO: General application info logs -->
    <appender name="APP_INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/app-info.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/app-info.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- APP-DEBUG: Debug level logs -->
    <appender name="APP_DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/app-debug.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/app-debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- APP-ERROR: Error level logs only -->
    <appender name="APP_ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/app-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/app-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- SECURITY: Spring Security logs -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/security.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/security.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- AUDIT: Audit trail logs -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/audit.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/audit.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ============================================= -->
    <!-- DEDICATED LOGGERS                             -->
    <!-- ============================================= -->

    <!-- Spring Security -->
    <logger name="org.springframework.security" level="DEBUG" additivity="false">
        <appender-ref ref="SECURITY_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Application Modules -->
    <logger name="com.waad.tba" level="DEBUG" additivity="false">
        <appender-ref ref="APP_DEBUG_FILE"/>
        <appender-ref ref="APP_INFO_FILE"/>
        <appender-ref ref="APP_ERROR_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.waad.tba.modules" level="DEBUG" additivity="false">
        <appender-ref ref="APP_DEBUG_FILE"/>
        <appender-ref ref="APP_INFO_FILE"/>
        <appender-ref ref="APP_ERROR_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Hibernate SQL (Uncomment to enable SQL logging) -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="APP_DEBUG_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="APP_DEBUG_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- To disable SQL logs, comment out the above two loggers and uncomment below:
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>
    -->

    <!-- ============================================= -->
    <!-- ROOT LOGGER                                   -->
    <!-- ============================================= -->

    <!-- Development Profile: DEBUG level -->
    <springProfile name="dev,local">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="APP_DEBUG_FILE"/>
            <appender-ref ref="APP_INFO_FILE"/>
            <appender-ref ref="APP_ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- Production Profile: INFO level -->
    <springProfile name="prod,production">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="APP_INFO_FILE"/>
            <appender-ref ref="APP_ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- Default Profile: INFO level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_INFO_FILE"/>
        <appender-ref ref="APP_ERROR_FILE"/>
    </root>

</configuration>
